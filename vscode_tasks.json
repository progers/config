{
  "version": "0.1.0",
  "runner": "terminal",
  "showOutput": "always",
  "echoCommand": true,
  "tasks": [
    {
      "taskName": "1-build_tests_debug",
      "command": "ninja -C out/Debug -j 300 blink_tests",
      "isShellCommand": true,
      "isTestCommand": true,
      "problemMatcher": [
        {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}"
          ],
          "pattern": {
            "regexp": "^../../(.*):(\\d+):(\\d+):\\s+(warning|\\w*\\s?error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        },
        {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}"
          ],
          "pattern": {
            "regexp": "^../../(.*?):(.*):\\s+(warning|\\w*\\s?error):\\s+(.*)$",
            "file": 1,
            "severity": 3,
            "message": 4
          }
        }
      ]
    },
    {
      "taskName": "2-build_chrome_debug",
      "command": "ninja -C out/Debug -j 300 chrome",
      "isShellCommand": true,
      "problemMatcher": [
