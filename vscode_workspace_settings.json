// Workspace settings for a Chromium developer.
{
  "git.enabled": false,
  
  // Opening the root chromium/src directory requires excluding large
  // directories or vscode will be too slow. These excludes are for a
  // blink/webkit developer.
  "files.exclude": {
    "third_party/WebKit/LayoutTests": true,
    "out": true,
    "content": true,
    "native_client": true,
    "native_client_sdk": true,
    "clank": true,
    "chrome": true,
    "build": true,
    "buildtools": true,
    "v8": true,
    "tools": true,
    "ui": true,
    "components": true,
    "ppapi": true,
    "remoting": true,
    "third_party/webgl": true,
    "third_party/webrtc": true,
    "third_party/swiftshader": true,
    "third_party/pdfium": true,
    "third_party/depot_tools": true,
    "third_party/catapult": true,
    "third_party/boringssl": true,
    "third_party/angle": true,
    "third_party/ffmpeg": true,
    "third_party/icu": true,
    "third_party/mesa": true,
    "third_party/perl": true,
    "third_party/skia": true,
    "third_party/vulkan-validation-layers": true,
    "ios": true,
    "extensions": true,
    "net": true
  },

  // Personal preferences.
  "editor.acceptSuggestionOnEnter": false,
  "editor.folding": false,
  "explorer.openEditors.visible": 100,
  "window.openFilesInNewWindow": "off",
  "editor.scrollBeyondLastLine": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,

  // Chromium style.
  "editor.rulers": [80],
  "editor.tabSize": 2
}
