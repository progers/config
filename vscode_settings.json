// Workspace settings for Chromium.
{
  "git.enabled": false,
  
  // Using chromium/src as the root directory includes an enormous
  // tree. The following excludes large branches that are not
  // particularly useful for a blink/webkit developer.
  "files.exclude": {
    // This excludes out/Debug/gen/ :/
    "out": true,
    "content": true,
    "native_client": true,
    "native_client_sdk": true,
    "clank": true,
    "chrome": true,
    "build": true,
    "buildtools": true,
    "v8": true,
    "tools": true,
    "components": true,
    "ppapi": true,
    "remoting": true,
    "third_party/webgl": true,
    "third_party/webrtc": true,
    "third_party/swiftshader": true,
    "third_party/pdfium": true,
    "third_party/depot_tools": true,
    "third_party/catapult": true,
    "third_party/boringssl": true,
    "third_party/angle": true,
    "third_party/ffmpeg": true,
    "third_party/icu": true,
    "third_party/mesa": true,
    "third_party/perl": true,
    "third_party/skia": true,
    "third_party/vulkan-validation-layers": true,
    "ios": true,
    "extensions": true,
    "net": true
  },

  // Personal preferences for Chromium. Some of these are inspired by:
  // https://cs.chromium.org/chromium/src/tools/vscode/settings.json5
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "window.zoomLevel": 0,
  // Selection resets the initial find search string which differs from sublime.
  "editor.find.seedSearchStringFromSelection": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.folding": false,
  "explorer.openEditors.visible": 100,
  "editor.scrollBeyondLastLine": false,
  // The preview feature differs from sublime and I found it got in the way.
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorBlinking": true,
  "editor.rulers": [72, 80],
  "editor.tabSize": 2,

  "files.associations": {
    // Adds xml syntax highlighting for grd files.
    "*.grd" : "xml",
    // Optional: .gn and .gni are not JavaScript, but at least it gives some
    // approximate syntax highlighting. Ignore the linter warnings!
    "*.gni" : "javascript",
    "*.gn" : "javascript"
  },

  // YouCompleteMe settings for the you-complete-me extension by RichardHe.
  // linux: "ycmd.path": "/usr/local/google/home/pdr/ycmd",
  // mac: "ycmd.path": "/Users/pdr/ycm/third_party/ycmd",
  "ycmd.path": "/Users/pdr/ycm/third_party/ycmd",
  "ycmd.global_extra_config": "tools/vim/chromium.ycm_extra_conf.py",
  "ycmd.confirm_extra_conf": false,
  "ycmd.use_imprecise_get_type": true,
  "ycmd.debug": true
}
